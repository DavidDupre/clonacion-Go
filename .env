APP_NAME=clonacion-service
APP_VERSION=0.1.0
APP_ENV=local
APP_PORT=8080
LOG_LEVEL=info

#Authentication
AUTH_ENABLED=false
AUTH_BYPASS_PATHS=/health
AUTH_CLOCK_SKEW=2m

#Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=goclonacion
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=30m

#Audit Trail
AUDIT_ENABLED=true
AUDIT_LOG_REQUEST_BODY=true
AUDIT_LOG_RESPONSE_BODY=true
AUDIT_MAX_BODY_SIZE=102400

#Document Processing (Concurrency)
DOCUMENT_WORKER_POOL_SIZE=10
DOCUMENT_BATCH_SIZE=50
DOCUMENT_MAX_CONCURRENT_REQUESTS=50
DOCUMENT_RATE_LIMIT_RPS=50

#Document Processing (Environment)
#CDO_AMBIENTE_DEFAULT: Default environment for documents when not provided in request
#Values: "1" = Production, "2" = Test/Staging
CDO_AMBIENTE_DEFAULT=2
